<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/seek_bar_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/progress_ok"
        style="@style/ProgressTexts"
        android:layout_marginRight="24dp"
        android:text="@string/ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/progress_cancel"
        style="@style/ProgressTexts"
        android:layout_marginLeft="24dp"
        android:text="@string/cancel"
        app:layout_constraintBottom_toBottomOf="@+id/progress_ok"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="82dp"
        android:layout_marginRight="82dp"
        android:progressDrawable="@drawable/progress_properties"
        android:thumb="@drawable/progress_pointer"
        app:layout_constraintBottom_toTopOf="@+id/progress_ok"
        app:layout_constraintLeft_toRightOf="@+id/progress_cancel"
        app:layout_constraintRight_toLeftOf="@+id/progress_ok"
        app:layout_constraintTop_toBottomOf="@+id/progress_cancel">

    </SeekBar>

    <!--<TextView
        android:id="@+id/progress_counter"
        android:text="@string/zero"
        style="@style/ProgressTextZero"/>-->

</android.support.constraint.ConstraintLayout>