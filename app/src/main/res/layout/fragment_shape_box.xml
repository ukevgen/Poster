<?xml version="1.0" encoding="utf-8"?>

<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                      xmlns:app="http://schemas.android.com/apk/res-auto"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:background="@android:color/transparent"

                      android:fillViewport="true"
                      android:scrollbars="none">

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/properties_margin_bottom"
        >

        <ImageView
            android:id="@+id/shape_oval"
            style="@style/FilterStyle"
            android:layout_marginLeft="8dp"
            android:background="@drawable/shape_oval"
            app:layout_constraintLeft_toLeftOf="parent">
        </ImageView>

        <ImageView

            android:id="@+id/shape_quadrangle"
            style="@style/FilterStyle"
            android:background="@drawable/shape_quadrangle"
            app:layout_constraintLeft_toRightOf="@+id/shape_oval"
            app:layout_constraintRight_toLeftOf="@+id/shape_rounded_rectangle"/>

        <ImageView
            android:id="@+id/shape_rounded_rectangle"
            style="@style/FilterStyle"
            android:background="@drawable/shape_rounded_rectangle"
            app:layout_constraintLeft_toRightOf="@+id/shape_quadrangle"
            app:layout_constraintRight_toLeftOf="@+id/shape_triangle"
            />


        <ImageView
            android:id="@+id/shape_triangle"
            style="@style/FilterStyle"
            android:layout_marginBottom="24dp"
            android:background="@drawable/shape_triangle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/shape_rounded_rectangle"
            app:layout_constraintRight_toLeftOf="@+id/shape_polygon"/>

        <ImageView
            android:id="@+id/shape_polygon"
            style="@style/FilterStyle"
            android:layout_marginRight="8dp"
            android:background="@drawable/shape_polygon"
            app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</HorizontalScrollView>

