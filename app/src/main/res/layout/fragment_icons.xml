<?xml version="1.0" encoding="utf-8"?>

<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                      xmlns:app="http://schemas.android.com/apk/res-auto"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:background="@android:color/transparent"
                        android:overScrollMode="never"
                      android:fillViewport="true"
                      android:scrollbars="none">

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/properties_margin_bottom"
        >

        <ImageView
            android:id="@+id/flower_icon"
            style="@style/WrapContentStyle"
            android:layout_marginLeft="8dp"
            android:background="@drawable/flower_icon"
            app:layout_constraintLeft_toLeftOf="parent">
        </ImageView>

        <ImageView

            android:id="@+id/heart_icon"
            style="@style/WrapContentStyle"
            android:background="@drawable/heart_icon"
            app:layout_constraintLeft_toRightOf="@+id/flower_icon"
            app:layout_constraintRight_toLeftOf="@+id/pin_icon"/>

        <ImageView
            android:id="@+id/pin_icon"
            style="@style/WrapContentStyle"
            android:background="@drawable/pin_icon"
            app:layout_constraintLeft_toRightOf="@+id/heart_icon"
            app:layout_constraintRight_toLeftOf="@+id/clock_icon"
            />


        <ImageView
            android:id="@+id/clock_icon"
            style="@style/WrapContentStyle"
            android:layout_marginBottom="24dp"
            android:background="@drawable/clock_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/pin_icon"
            app:layout_constraintRight_toLeftOf="@+id/alien_icon"/>

        <ImageView
            android:id="@+id/alien_icon"
            style="@style/WrapContentStyle"
            android:layout_marginRight="8dp"
            android:background="@drawable/alien_icon"
            app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</HorizontalScrollView>

